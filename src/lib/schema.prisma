// schema.prisma
// Prisma schema using PostgreSQL

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Profile {
    id        String   @id @default(uuid())
    userId    String   @unique
    fullName  String
    avatarUrl String?
    role      Role
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    enrollments Enrollment[]
    classes     Class[] @relation("CreatedClasses")
}

enum Role {
    student
    tutor
}

model Class {
    id          String   @id @default(uuid())
    name        String
    description String?
    createdBy   String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    creator Profile @relation("CreatedClasses", fields: [createdBy], references: [id])
    enrollments Enrollment[]
    assignments Assignment[]
}

model Enrollment {
    id        String   @id @default(uuid())
    profileId String
    classId   String
    createdAt DateTime @default(now())

    profile Profile @relation(fields: [profileId], references: [id])
    class   Class   @relation(fields: [classId], references: [id])
}

model Assignment {
    id          String   @id @default(uuid())
    classId     String
    title       String
    description String?
    dueDate     DateTime
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    class      Class       @relation(fields: [classId], references: [id])
    submissions Submission[]
}

model Submission {
    id           String   @id @default(uuid())
    assignmentId String
    profileId    String
    content      String
    submittedAt  DateTime @default(now())

    assignment Assignment @relation(fields: [assignmentId], references: [id])
    profile    Profile    @relation(fields: [profileId], references: [id])
}
